# tmux-sessionizer configuration file
# This file is sourced by tmux-sessionizer on startup

# Search paths for project directories
# Directories will be searched one level deep for subdirectories
# NOTE: Removed $HOME - it includes too many non-project dirs (Downloads, Documents, etc.)
# Add specific directories you want quick access to instead
SEARCH_PATHS=(
  "$HOME/github"
  "$HOME/gitlab"
  "$HOME/personal"
  "$HOME/work"
  "$HOME/.homesick/repos/dotfiles"
  # Add pinned directories here (searched as-is, not their children):
  "$HOME/Dropbox/org"
)

# Maximum depth for directory search (1 = immediate subdirectories only)
MAX_DEPTH=1

# Feature toggles
ENABLE_PREVIEW=true        # Show rich preview pane in fzf
ENABLE_STATS=true          # Track session usage statistics
ENABLE_GIT_STATUS=false    # Show git status indicators (SLOW - runs git for each dir)
ENABLE_TEMPLATES=true      # Apply session templates based on project type
INCLUDE_HOME_TOPLEVEL=true # Include ~/*/dirs (but not their children) if not in SEARCH_PATHS

# Stats file location
STATS_FILE="$HOME/.config/tmux-sessionizer/stats.json"

# Template directory
TEMPLATE_DIR="$HOME/.config/tmux-sessionizer/templates"
